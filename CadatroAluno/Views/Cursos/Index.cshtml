@model IEnumerable<CadastroAluno.Models.Curso>

@{
    ViewData["Title"] = "Curso";
}

<p>
    <a asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeDoCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiciplinasDoCurso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDoCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiciplinasDoCurso)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                
            </td>
        </tr>
}
    </tbody>
</table>

