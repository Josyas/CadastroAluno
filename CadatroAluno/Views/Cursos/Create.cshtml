@model CadastroAluno.Models.Curso

@{
    ViewData["Title"] = "Criar";
}

<h1>Create</h1>

<h4>Curso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeDoCurso" class="control-label"></label>
                <input asp-for="NomeDoCurso" class="form-control" />
                <span asp-validation-for="NomeDoCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiciplinasDoCurso" class="control-label"></label>
                <input asp-for="DiciplinasDoCurso" class="form-control" />
                <span asp-validation-for="DiciplinasDoCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


